<?xml version="1.0" ?>

<launch>
    <arg name="task_name" default="mpc"/>

    <!-- make the files into global parameters -->
    <param name="taskFile" value="$(find diablo)/config/$(arg task_name)/task.info"/>
    <param name="libFolder" value="$(find diablo)/auto_generated"/>

    <rosparam file="$(find diablo)/config/controllers.yaml" command="load"/>

    <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false"
          output="screen" ns="/" args="controllers/joint_state_controller
                                    controllers/robot_state_controller
                                    controllers/diablo_balance_controller
                                    " />

